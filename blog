    <!-- Modal for AI Message Drafter -->
    <div id="draft-modal" class="modal-backdrop hidden">
        <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-md">
            <h3 class="text-xl font-bold mb-4">Draft a Message with AI ✨</h3>
            <p class="text-gray-600 mb-4">Enter a few keywords about what you want to say (e.g., "collaboration on a project," "question about your blog post").</p>
            <input type="text" id="message-keywords" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" placeholder="e.g., collaboration, question about design">
            <div class="flex justify-end space-x-4 mt-6">
                <button id="cancel-draft-btn" class="px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-200 transition">Cancel</button>
                <button id="generate-draft-btn" class="px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 transition">Generate Draft</button>
            </div>
