    <!-- JavaScript for Mobile Menu & Gemini API -->
    <script>
        // --- Mobile Menu ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // --- Gemini API Integration ---
        const API_KEY = ""; // Leave empty, will be handled by the environment

        async function callGemini(prompt) {
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${API_KEY}`;
            
            const payload = {
                contents: [{ role: "user", parts: [{ text: prompt }] }]
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API call failed with status: ${response.status}`);
                }

                const result = await response.json();
                
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    return result.candidates[0].content.parts[0].text;
                } else {
                    console.error("Unexpected API response structure:", result);
                    return "Sorry, I couldn't generate a response. Please try again.";
                }
            } catch (error) {
                console.error("Error calling Gemini API:", error);
                return "An error occurred while contacting the AI. Please check the console.";
            }
        }

        // 1. Blog Idea Generator
        const generateIdeasBtn = document.getElementById('generate-ideas-btn');
        const ideasLoader = document.getElementById('ideas-loader');
        const blogIdeasContainer = document.getElementById('blog-ideas-container');

        generateIdeasBtn.addEventListener('click', async () => {
            ideasLoader.classList.remove('hidden');
            generateIdeasBtn.disabled = true;
            
            const prompt = "You are a creative assistant for a personal blog that covers technology, design, and life. Generate 3 fresh and engaging blog post ideas. For each idea, provide a catchy title and a one-sentence description. Format your response as a simple list, with each item starting with 'Title:' and then 'Description:'.";
            
            const ideas = await callGemini(prompt);
            
            blogIdeasContainer.innerHTML = ideas.split('\n').map(line => {
                if (line.startsWith('Title:')) {
                    return `<h4 class="text-lg font-semibold mt-4">${line.replace('Title:', '').trim()}</h4>`;
                }
                if (line.startsWith('Description:')) {
                    return `<p class="text-gray-600">${line.replace('Description:', '').trim()}</p>`;
                }
                return `<p>${line}</p>`; // For any other lines
            }).join('');
            
            ideasLoader.classList.add('hidden');
            generateIdeasBtn.disabled = false;
        });

        // 2. Blog Post Summarizer
        document.querySelectorAll('.summarize-btn').forEach(button => {
            button.addEventListener('click', async (e) => {
                const card = e.target.closest('.blog-post-card');
                const loader = card.querySelector('.summary-loader');
                const output = card.querySelector('.summary-output');
                const content = card.querySelector('.post-content').textContent;
                
                loader.classList.remove('hidden');
                button.style.display = 'none';
                output.textContent = '';
                
                const prompt = `Summarize the following blog post content in one short, concise sentence:\n\n"${content}"`;
                
                const summary = await callGemini(prompt);
                
                output.textContent = summary;
                loader.classList.add('hidden');
            });
        });

        // 3. AI-Assisted Contact Form
        const draftMessageBtn = document.getElementById('draft-message-btn');
        const messageTextarea = document.getElementById('message');
        const messageLoader = document.getElementById('message-loader');
        const draftModal = document.getElementById('draft-modal');
        const cancelDraftBtn = document.getElementById('cancel-draft-btn');
        const generateDraftBtn = document.getElementById('generate-draft-btn');
        const messageKeywordsInput = document.getElementById('message-keywords');

        draftMessageBtn.addEventListener('click', () => {
            draftModal.classList.remove('hidden');
        });
        
        cancelDraftBtn.addEventListener('click', () => {
            draftModal.classList.add('hidden');
        });

        generateDraftBtn.addEventListener('click', async () => {
            const keywords = messageKeywordsInput.value;
            if (!keywords.trim()) {
                alert("Please enter some keywords.");
                return;
            }
            
            draftModal.classList.add('hidden');
            messageLoader.classList.remove('hidden');
            
            const prompt = `My name is [Your Name] and I'm contacting the owner of this website, John Doe. Write a polite and professional message for a contact form based on these keywords: "${keywords}". The message should be friendly and clear. Sign off with my name.`;
            
            const draft = await callGemini(prompt);
            
            messageTextarea.value = draft.replace("[Your Name]", document.getElementById('name').value || "Visitor");
            messageKeywordsInput.value = '';
            messageLoader.classList.add('hidden');
        });

    </script>

</body>
